{
  "name": "golikejs",
  "version": "0.1.0",
  "description": "Reimplementations of Go standard packages (e.g. sync, context) for JavaScript/TypeScript",
  "type": "module",
  "exports": {
    "./sync": {
      "types": "./dist/sync/index.d.ts",
      "import": "./dist/sync/index.js",
      "require": "./dist/sync/index.cjs"
    },
    "./context": {
      "types": "./dist/context/index.d.ts",
      "import": "./dist/context/index.js",
      "require": "./dist/context/index.cjs"
    }
  },
  "scripts": {
    "build": "bun run build:types && bun run build:js",
    "build:types": "tsc --noEmit false --emitDeclarationOnly --outDir dist",
    "build:js": "bun build src/sync/index.ts src/context/index.ts --outdir dist --minify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "dev": "bun --watch src/index.ts",
    "prepack": "bun run build"
  },
  "keywords": [
    "sync",
    "synchronization",
    "mutex",
    "semaphore",
    "waitgroup",
    "channel",
    "cond",
    "go",
    "concurrency",
    "typescript",
    "context"
  ],
  "author": "OkutaniDaichi0106",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OkutaniDaichi0106/golikejs.git"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "bun-types": "^1.2.23",
    "typescript": "^5"
  }
}
