{
  "name": "gosync",
  "version": "1.0.0",
  "description": "Go-style synchronization primitives for JavaScript/TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun run build:types && bun run build:js",
    "build:types": "tsc --noEmit false --emitDeclarationOnly --outDir dist",
    "build:js": "bun build src/index.ts --outdir dist --minify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "dev": "bun --watch src/index.ts",
    "prepack": "bun run build"
  },
  "keywords": [
    "sync",
    "synchronization",
    "mutex",
    "semaphore",
    "waitgroup",
    "channel",
    "go",
    "concurrency",
    "typescript"
  ],
  "author": "OkutaniDaichi0106",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OkutaniDaichi0106/gosync.git"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
