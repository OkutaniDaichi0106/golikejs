{
  "name": "golikejs",
  "version": "0.4.0",
  "description": "Reimplementations of Go standard packages (e.g. sync, context) for JavaScript/TypeScript",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./sync": {
      "types": "./dist/sync/index.d.ts",
      "import": "./dist/sync/index.js",
      "require": "./dist/sync/index.js"
    },
    "./context": {
      "types": "./dist/context/index.d.ts",
      "import": "./dist/context/index.js",
      "require": "./dist/context/index.js"
    },
    "./channel": {
      "types": "./dist/channel/index.d.ts",
      "import": "./dist/channel/index.js",
      "require": "./dist/channel/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "node ./scripts/copy-src-to-dist.cjs",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prepack": "npm run build"
  },
  "main": "dist/index.js",
  "typesVersions": {
    "*": {
      "sync": [
        "dist/sync/index.d.ts"
      ],
      "sync/*": [
        "dist/sync/*"
      ],
      "context": [
        "dist/context/index.d.ts"
      ],
      "context/*": [
        "dist/context/*"
      ],
      "channel": [
        "dist/channel/index.d.ts"
      ],
      "channel/*": [
        "dist/channel/*"
      ],
      "*": [
        "dist/*"
      ]
    }
  },
  "keywords": [
    "sync",
    "synchronization",
    "mutex",
    "semaphore",
    "waitgroup",
    "channel",
    "cond",
    "go",
    "concurrency",
    "typescript",
    "context"
  ],
  "author": "OkutaniDaichi0106",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OkutaniDaichi0106/golikejs.git"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.16",
    "typescript": "^5",
    "vitest": "^1.0.0"
  }
}
